<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <com.yandex.mapkit.mapview.MapView        android:id="@+id/mapview"        android:layout_width="match_parent"        android:layout_height="match_parent"/>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <EditText            android:layout_width="wrap_content"            android:layout_weight="1"            android:layout_height="35dp"            android:id="@+id/search_edit"            android:imeOptions="actionSearch"            android:textColor="@color/text"            android:inputType="text"            android:background="@color/Light_Grey"            android:maxLines="1"            android:textColorHint="@color/Grey"            android:hint="Введите запрос"/>    </LinearLayout></RelativeLayout>